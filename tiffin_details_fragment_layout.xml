<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content">



    <ImageView
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_gravity="center"
        android:id="@+id/Details_frg_Image"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/Details_frg_Id"
            android:layout_marginTop="10dp"
            android:text="dal"/>


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/Details_frg_Roti"
            android:layout_marginTop="10dp"
            android:text="dal"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/Details_frg_Sabji"
            android:layout_marginTop="10dp"
            android:text="dal"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/Details_frg_Dal"
            android:layout_marginTop="10dp"
            android:text="dal"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/Details_frg_Chawal"
            android:layout_marginTop="10dp"
            android:text="chawal"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/Details_frg_Price"
            android:layout_marginTop="10dp"
            android:text="dal"
            android:textColor="@android:color/holo_red_dark"/>
    </LinearLayout>
</LinearLayout>